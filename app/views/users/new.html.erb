<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>

<%= form_for @user, url: {action: :create} do |f| %>
  <%= f.label :uid, 'uid' %> 
  <%= f.text_field :uid %> 
  <%= f.label :pass, 'pass' %> 
  <%= f.password_field :pass %>
  <%= f.submit '登録' %>
<% end %>